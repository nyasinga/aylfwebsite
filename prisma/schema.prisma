// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// User Module
// ============================================
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String
  role      UserRole @default(USER)
  avatar    String?
  isActive  Boolean  @default(true)
  lastLogin DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  blogPosts     BlogPost[]
  events        Event[]
  donations     Donation[]
  mediaUploads  Media[]
  homepageSettings HomepageSettings[] @relation("HomepageSettings")

  @@map("users")
}

enum UserRole {
  USER
  ADMIN
  EDITOR
  CONTRIBUTOR
  MODERATOR
}

// ============================================
// Blog Module
// ============================================
model BlogPost {
  id          String      @id @default(cuid())
  title       String
  slug        String      @unique
  excerpt     String?
  content     String      @db.Text
  featuredImage String?
  status      PostStatus  @default(DRAFT)
  publishedAt DateTime?
  authorId    String
  author      User        @relation(fields: [authorId], references: [id], onDelete: Cascade)
  categoryId  String?
  category    BlogCategory? @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  tags        BlogTag[]
  views       Int         @default(0)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@index([slug])
  @@index([status])
  @@index([authorId])
  @@map("blog_posts")
}

model BlogCategory {
  id          String      @id @default(cuid())
  name        String      @unique
  slug        String      @unique
  description String?
  posts       BlogPost[]
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@index([slug])
  @@map("blog_categories")
}

model BlogTag {
  id        String     @id @default(cuid())
  name      String     @unique
  slug      String     @unique
  posts     BlogPost[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  @@index([slug])
  @@map("blog_tags")
}

enum PostStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

// ============================================
// Events Module
// ============================================
model Event {
  id          String      @id @default(cuid())
  title       String
  slug        String      @unique
  description String      @db.Text
  content     String?     @db.Text
  image       String?
  startDate   DateTime
  endDate     DateTime?
  location    String?
  address     String?
  isOnline    Boolean     @default(false)
  eventUrl    String?
  status      EventStatus @default(UPCOMING)
  organizerId String
  organizer   User        @relation(fields: [organizerId], references: [id], onDelete: Cascade)
  registrations EventRegistration[]
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@index([slug])
  @@index([status])
  @@index([startDate])
  @@map("events")
}

model EventRegistration {
  id        String   @id @default(cuid())
  eventId   String
  event     Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  name      String
  email     String
  phone     String?
  status    RegistrationStatus @default(PENDING)
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([eventId])
  @@index([email])
  @@map("event_registrations")
}

enum EventStatus {
  UPCOMING
  ONGOING
  COMPLETED
  CANCELLED
}

enum RegistrationStatus {
  PENDING
  CONFIRMED
  CANCELLED
  ATTENDED
}

// ============================================
// Donations Module
// ============================================
model Donation {
  id            String          @id @default(cuid())
  amount        Decimal         @db.Decimal(10, 2)
  currency      String          @default("USD")
  donorName     String
  donorEmail    String
  donorPhone    String?
  isAnonymous   Boolean         @default(false)
  paymentMethod PaymentMethod
  status        DonationStatus  @default(PENDING)
  transactionId String?         @unique
  notes         String?
  userId        String?
  user          User?           @relation(fields: [userId], references: [id], onDelete: SetNull)
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt

  @@index([status])
  @@index([donorEmail])
  @@index([createdAt])
  @@map("donations")
}

enum PaymentMethod {
  CREDIT_CARD
  DEBIT_CARD
  BANK_TRANSFER
  PAYPAL
  STRIPE
  MOBILE_MONEY
  CASH
  OTHER
}

enum DonationStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
  REFUNDED
}

// ============================================
// Media Module
// ============================================
model Media {
  id          String      @id @default(cuid())
  filename    String
  originalName String
  mimeType    String
  size        Int
  path        String
  url         String
  alt         String?
  caption     String?
  type        MediaType
  uploadedById String
  uploadedBy   User      @relation(fields: [uploadedById], references: [id], onDelete: Cascade)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@index([type])
  @@index([uploadedById])
  @@map("media")
}

enum MediaType {
  IMAGE
  VIDEO
  DOCUMENT
  AUDIO
  OTHER
}

// ============================================
// Pages Module
// ============================================
model Page {
  id          String      @id @default(cuid())
  title       String
  slug        String      @unique
  content     String      @db.Text
  excerpt     String?
  metaTitle   String?
  metaDescription String?
  isPublished Boolean     @default(false)
  publishedAt DateTime?
  order       Int         @default(0)
  parentId    String?
  parent      Page?       @relation("PageHierarchy", fields: [parentId], references: [id], onDelete: SetNull)
  children    Page[]      @relation("PageHierarchy")
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@index([slug])
  @@index([isPublished])
  @@index([order])
  @@map("pages")
}

// ============================================
// Contact Module (existing)
// ============================================
model Contact {
  id        String        @id @default(cuid())
  name      String
  email     String
  subject   String?
  message   String        @db.Text
  status    ContactStatus @default(PENDING)
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt

  @@map("contacts")
}

enum ContactStatus {
  PENDING
  READ
  REPLIED
  ARCHIVED
}

// ============================================
// Homepage Settings Module
// ============================================
model HomepageSettings {
  id          String   @id @default(cuid())
  heroTitle   String   @default("Africa Youth Leadership Forum")
  heroSubtitle String  @db.Text
  heroImage   String?
  ctaPrimaryText String @default("Donate Now")
  ctaPrimaryLink String @default("/donate")
  ctaSecondaryText String @default("Contact Us")
  ctaSecondaryLink String @default("/contact")
  isActive    Boolean  @default(true)
  updatedById String?
  updatedBy   User?    @relation("HomepageSettings", fields: [updatedById], references: [id], onDelete: SetNull)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("homepage_settings")
}
